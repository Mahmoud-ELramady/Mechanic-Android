<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="226dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:padding="16dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="13dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كم كانت تكلفة الخدمة ؟"
            android:fontFamily="@font/janna_lt_bold"
            android:textSize="15dp"
            android:textColor="@color/primary_color"
            android:layout_gravity="center"
            />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/background_color_box"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_confirm_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="اكتب التكلفة هنا بالجنيه المصرى"
                android:fontFamily="@font/janna_lt_regular"
                android:textSize="15dp"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_service"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:backgroundTint="@color/button_color_blue"
                android:fontFamily="@font/janna_lt_bold"
                android:text="تأكيد المبلغ وانهاء العملية"
                android:textColor="@color/text_color_white"
                android:textSize="16dp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back_service"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/text_color_white"
                android:fontFamily="@font/janna_lt_bold"
                android:text="رجوع"
                android:textColor="@color/text_color_blue"
                android:textSize="16dp"
                app:strokeColor="@color/text_color_blue"
                app:strokeWidth="1dp" />




        </LinearLayout>


    </LinearLayout>







</com.google.android.material.card.MaterialCardView>