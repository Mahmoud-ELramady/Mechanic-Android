<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="358dp"
    android:layout_height="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    android:layout_marginBottom="12dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >


        <LinearLayout
            android:id="@+id/done_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <TextView
                android:id="@+id/item_name_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/janna_lt_regular"
                android:textColor="@color/primary_color"
                android:textSize="16dp"
                android:text="السعيد جمال"
                android:layout_marginEnd="8dp"
                android:singleLine="true"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_image_done"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/text_color_blue"
                android:layout_gravity="center"
                android:src="@color/primary_color"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/requests_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/done_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/item_location_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="@color/text_color_blue"
                    android:textSize="15dp"
                    android:text="مدينة نصر شارع مكرم عبيد المتفرع من شارع
التحرير أمام صيدلية الطرشوبى"
                    android:maxLines="2"
                    android:layout_marginEnd="5dp"
                    />


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/location_icon"
                    android:backgroundTint="@color/text_color_blue"

                    />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/line"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/requests_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/requests_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/item_date_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="17 Septamber"
                        android:textSize="15dp"
                        android:textColor="@color/primary_color"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="start"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="تاريخ الطلب"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:textColor="#CC335D7D"
                        android:layout_weight="1"
                        android:gravity="start"

                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/line"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/item_time_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="11:35 AM"
                        android:textSize="15dp"
                        android:textColor="@color/primary_color"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="start"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="توقيت الطلب"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:textColor="#CC335D7D"
                        android:layout_weight="1"
                        android:gravity="start"

                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/line"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/item_type_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="حجز الخدمة فى ورشة الميكانيكى"
                        android:textSize="15dp"
                        android:textColor="@color/primary_color"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="نوع الطلب"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:textColor="#CC335D7D"
                        android:layout_weight="1.5"
                        android:gravity="start"

                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/line"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />


            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/item_problem_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="تغيير اطارات السيارة"
                        android:textSize="15dp"
                        android:textColor="@color/primary_color"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/janna_lt_regular"
                        android:text="المشكلة"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:textColor="#CC335D7D"
                        android:layout_weight="1"
                        android:gravity="start"

                        />
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>