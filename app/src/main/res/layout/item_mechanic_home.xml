<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="212dp"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/item_image_home"
            android:layout_width="328dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:src="@drawable/effect_item_mechanic"
            android:background="@drawable/mechanic_item"
            android:scaleType="centerCrop"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/item_tv_name_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/janna_lt_bold"
                android:text="ورشة السلام للباشمهندس العربى"
                android:textSize="16dp"
                android:textColor="@color/text_color_white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginStart="140dp"
                >

                <TextView
                    android:id="@+id/item_tv_loc_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="@color/text_color_white"
                    android:text="مدينة نصر (150 كم)"

                    />


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/location_icon"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    />



            </LinearLayout>


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>








</RelativeLayout>