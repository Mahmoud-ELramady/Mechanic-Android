<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        tools:context=".register.RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="25dp">

            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سجل الأن"
                android:textColor="@color/button_color_blue"
                android:fontFamily="@font/janna_lt_bold"
                android:textSize="35dp"
                android:textFontWeight="100"
                android:padding="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_edly_register"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="الإسم"
                android:textColorHint="#80000000"
                app:endIconDrawable="@drawable/icon_person"
                app:endIconMode="custom"
                app:boxStrokeColor="@color/button_color_blue"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_ed_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_edly_register"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="الإيميل"
                android:layout_marginTop="10dp"
                android:textColorHint="#80000000"
                app:endIconDrawable="@drawable/icon_email"
                app:endIconMode="custom"
                app:boxStrokeColor="@color/button_color_blue"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_ed_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_edly_register"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="رقم التليفون"
                android:layout_marginTop="10dp"
                android:textColorHint="#80000000"
                app:endIconDrawable="@drawable/icon_phone"
                app:endIconMode="custom"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxStrokeColor="@color/button_color_blue"

                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_ed_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_edly_register"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layoutDirection="rtl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="كلمة المرور"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/icon_lock"
                android:textColorHint="#80000000"
                app:boxStrokeColor="@color/button_color_blue"
                app:passwordToggleEnabled="true"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_ed_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/janna_lt_regular"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:backgroundTint="@color/button_color_blue"
                android:fontFamily="@font/janna_lt_bold"
                android:text="تسجيل"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="@color/text_color_white"
                android:textSize="20dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>